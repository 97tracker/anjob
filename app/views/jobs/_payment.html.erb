<% if !@job.persisted? %>
  <h4 class="subtitle is-4">Valider votre annonce</h4>

  <div class="notification is-light has-text-centered">
    <i class="fa fa-credit-card"></i>
    Les annonces coûtent <strong>20€</strong> pour 30 jours de publication.
    <span class="block mb4"></span>
  </div>

  <div class="form-row">
    <label for="card-element" class="label">
      Paiement par carte bancaire
    </label>

    <div id="card-element" class="form-control">
      <!-- a Stripe Element will be inserted here. -->
    </div>
    <!-- used to display Element errors -->
    <div id="card-errors" role="alert"></div>
  </div>

  <% if current_user.stripe_id.present? %>
    <div class="last-card bg-light pa4 border-radius-3 mt4">
      <h5 class="is-6 title pt2">Utiliser une carte existante</h5>
      <table class="table is-narrow bg-light is-fullwidth">
        <thead>
          <th>NNuméro de carte</th>
          <th>3 derniers chiffres</th>
          <th>Expire au mois de</th>
          <th>Expire a l'année</th>
        </thead>
        <tr>
          <td><%= current_user.card_brand %></td>
          <td><%= current_user.card_last4 %></td>
          <td><%= current_user.card_exp_month %></td>
          <td><%= current_user.card_exp_year %></td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>
